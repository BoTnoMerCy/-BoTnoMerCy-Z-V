<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Популярные интернет-магазины в России :"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageView13"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginStart="10dp"
                android:onClick="goWeb4"
                android:background="#00ffffff"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/y" />

            <ImageButton
                android:id="@+id/imageView11"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginStart="10dp"
                android:onClick="goWeb4"
                android:background="#00ffffff"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/wild" />

            <ImageButton
                android:id="@+id/imageView1"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginStart="10dp"
                android:onClick="goWeb2"
                android:background="#00ffffff"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/x" />

            <ImageButton
                android:id="@+id/imageView2"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginStart="10dp"
                android:onClick="goWeb3"
                android:background="#00ffffff"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/c" />

            <ImageButton
                android:id="@+id/imageView3"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginStart="10dp"
                android:onClick="goWeb4"
                android:background="#00ffffff"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/r" />

            <ImageButton
                android:id="@+id/imageView4"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginStart="10dp"
                android:onClick="goWeb5"
                android:background="#00ffffff"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/m" />

        </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@color/teal_200"
        android:gravity="center"
        android:onClick="goWeburl"
        android:text="У меня своя ссылка"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />


</RelativeLayout>